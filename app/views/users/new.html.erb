<h1>Please create an account</h1>

<p>Before you can take our survey, we need to create an account.  Please complete the form below:</p>

<div>
  <%= error_messages_for "user" %>
</div>

<% form_for @user, :html => { :multipart => true }  do |f| %>
  <table border="0" cellpadding="5">
    <tr>
      <td width="150">
        Name:
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr><td>Email:</td>
    <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td width="100">
        Disease:
      </td>
      <td>
        <%= f.text_field :disease %>
      </td>
    </tr>
    <tr>
        <td>
          How are you related to the affected?
        </td>
        <td>
          <%= select "user", "relation_to_disease", ["Diagnosed","Caregiver","Other"], :prompt => "Choose" %>
        </td>
      </tr>
    <tr>
        <td>
          When was the diagnosis?
        </td>
        <td>
          <%= select_month @user.diagnosis_month, :prompt => 'Choose month',:field_name => 'diagnosis_month', :prefix => "user" %>
          <%= select_year 0, :prompt => 'Choose year',:field_name => 'diagnosis_year', :start_year => 1930, :end_year => Date.today.year, :prefix => "user" %>
        </td>
      </tr>
    <tr>
      <td>Please update a profile picture: </td>
      <td><%= f.file_field :avatar %></td>
    </tr>
    <tr><td></td>
    <td align="right">
      <%= submit_tag  "Submit" %>
    </td></tr>
  </table>
<% end %>